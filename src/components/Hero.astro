---
import { Image } from "astro:assets";

import HeroDesktop from "../assets/img/hero-hd.webp";
import elipse from "../assets/img/ellipse-hero.svg";
---

<section class="relative flex flex-row m-auto h-screen w-full">
        <div class="w-1/2 flex justify-center">
            <div class="w-4/5 text-left my-auto flex flex-col">
                <h1
                class="font-daciaBold font-bold text-white max-w-fit whitespace-pre-line uppercase md:text-[58px] text-[2.5rem] leading-[3.125rem] md:leading-[5.625rem]" style="letter-spacing: -0.02em;"
                >The global hub for <span class="text-yellow">bet trading</span>
            </h1>
            <p class="font-inter font-normal text-white text-sm leading-[1.5rem] md:text-xl md:leading-8 md:mt-4 mt-2">
                Transform your bets into unique digital assets and securely trade
                them worldwide on the BetSell Marketplace.
            </p>
            <a
                href="/marketplace"
                class="bg-yellow text-black p-4 rounded-xl font-bold max-w-fit m-auto mt-5 md:hidden"
                >Go to Marketplace</a
            >
            </div>
        </div>
        <div class="w-1/2 self-center">
            <Image src={HeroDesktop} alt="Bet Sell" class="w-full" />
        </div>
    <Image src={elipse} alt="elipse" class="absolute -z-50 -left-48 -top-48" />
</section>
