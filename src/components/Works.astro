---
import { Image } from "astro:assets";

import elipse from "../assets/img/ellipse-works.svg";
import work1 from "../assets/img/work1.svg";
import work2 from "../assets/img/work2.svg";
import work3 from "../assets/img/work3.svg";
import work4 from "../assets/img/work4.svg";
---

<section class="relative max-h-fit h-auto md:py-32 py-10 bg-yellow overflow-hidden">
    <div
        class="flex flex-col justify-center h-full items-center relative z-20 m-auto max-w-[1440px]"
    >
        <div class=" h-4/5 flex flex-col items-center gap-5">

            <div class="w-3/4 flex flex-col">
                <h2 class="font-daciaRegular font-bold md:text-5xl md:leading-[67px] text-[32px] leading-[45px] whitespace-pre-line" style="letter-spacing: -0.02em;">HOW IT WORKS</h2>
                <p class="font-inter md:text-xl md:leading-8 md:max-w-[586px] text-sm leading[22px] text-justify">Designed for seamless use by sportsbook users of all levels.</p>
            </div>
            <div class="w-3/4 h-[67%] flex flex-row justify-start flex-wrap gap-4">
                <Image src={work1} alt="how it works1" class="w-[48%] h-auto object-contain min-w-[300px]" />
                <Image src={work2} alt="how it works2" class="w-[48%] h-auto object-contain min-w-[300px]" />
                <Image src={work3} alt="how it works3" class="w-[48%] h-auto object-contain min-w-[300px]" />
                <Image src={work4} alt="how it works4" class="w-[48%] h-auto object-contain min-w-[300px]" />
            </div>

        </div>
    </div>
    <Image src={elipse} alt="elipse" class="absolute z-10 top-0 -right-40" />
</section>