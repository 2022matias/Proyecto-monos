---
import { Image } from "astro:assets";

import Ramirez from "../assets/img/Ramirez.svg";
import Sandl from "../assets/img/Sandl.svg";
import linkedIn from "../assets/img/linkedIn-founders.svg";
import elipse from "../assets/img/ellipse-founders.svg"
---
<section class="h-screen flex justify-center items-center relative">
    <div class="flex flex-row w-[707px]" style="margin-right: 10%;">
        <h2 class="w-1/3 font-daciaBold font-bold text-[48px] leading[67px] text-yellow text-center content-center">US</h2>
        <div class="w-1/3 flex flex-col gap-5 ml-10">
            <Image src={Ramirez} alt="foto del fundador" class="rounded-lg w-full" />
            <p class="font-daciaBold font-bold text-[16px] leading[26px] text-[#F0F0F2]">Aramis Ramirez</p>
            <p class="font-inter font-light text-[13px] leading[20px] text-[#F0F0F2]">CEO & CO FOUNDER</p>
            <div class="flex justify-between border-y border-yellow py-5 border-dashed">
                <p class="font-inter font-normal text-[13px] leading[21px] text-[#F0F0F2]">Betting Operator</p>
                <Image src={linkedIn} alt="icono linkedIn" />
            </div>
        </div>
        <div class="w-1/3 flex flex-col gap-5 ml-10">
            <Image src={Sandl} alt="foto del fundador" class="rounded-lg w-full" />
            <p class="font-daciaBold font-bold text-[16px] leading[26px] text-[#F0F0F2]">Jafett Sandi</p>
            <p class="font-inter font-light text-[13px] leading[20px] text-[#F0F0F2]">CTO & CO FOUNDER</p>
            <div class="flex justify-between border-y border-yellow py-5 border-dashed">
                <p class="font-inter font-normal text-[13px] leading[21px] text-[#F0F0F2]">Engineering Architect</p>
                <Image src={linkedIn} alt="icono linkedIn" />
            </div>
        </div>
    </div>
    <Image src={elipse} alt="elipse" class="absolute -z-50 right-0 w-full" />
</section>