---
import { Image } from "astro:assets";

import logo from "../assets/img/footer-logo.svg";
import linkedin from "../assets/img/LinkedIn.svg";
import twitter from "../assets/img/Twitter.svg";

import elipse from "../assets/img/ellipse-footer.svg";
import elipseSm from "../assets/img/ellipse-footer-sm.svg";
---

<footer class="relative h-auto bg-yellow">
    <Image src={elipse} alt="elipse" class="hidden md:block md:absolute left-0 bottom-0 z-0" />
    <Image src={elipseSm} alt="elipse" class="absolute md:hidden left-0 bottom-0 z-0" />
    <div class="relative grid grid-cols-1 max-w-[319px] md:max-w-7xl md:pt-16 md:pb-9 m-auto md:px-4 pt-[28px] pb-[20px]">
        <div class="grid grid-cols-2 w-full md:pb-7 pb-5">
            <div class="grid grid-cols-1 md:gap-5 gap-3 max-w-fit">
                <p class="font-inter text-black font-normal md:text-xl md:leading-8 text-sm leading-[22px]">Join the community</p>
                <div class="grid grid-cols-2 md:gap-3 gap-2">
                    <a href="#">
                        <Image src={linkedin} alt="Linkedin logo" class="cursor-pointer w-12 md:w-20" />
                    </a>
                    <a href="#">
                        <Image src={twitter} alt="Twitter logo" class="cursor-pointer w-12 md:w-20" />
                    </a>
                </div>
            </div>

            <div class="grid grid-cols-1 md:gap-5 gap-3 max-w-fit ml-auto">
                <p class="font-inter text-black font-normal md:text-xl md:leading-8 text-sm leading-[22px]">Want to join us?</p>
                <a href="#" class="bg-[#121212] text-white font-inter md:text-xl text-sm pt-3 pb-2 px-4 md:py-6 md:px-6 rounded-xl hover:bg-[#212121]">Contact founders</a>
            </div>
        </div>

        <hr class="border-t-[0.5px] border-[#1e1e1e]">

        <Image src={logo} alt="BetSell Logo"  class="md:w-[218px] w-[127px] mx-auto md:pt-8 pt-5"/>
    </div>
</footer>