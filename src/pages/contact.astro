---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";

import elipse from "../assets/img/ellipse-contact.svg";
import CountrySelect from '../components/CountrySelect';
---
<Layout>
    <section class="flex items-center justify-center w-full h-screen relative z-10">      
        <div class="flex flex-col justify-center items-center w-1/3 min-w-[300px]">
            <div class="w-full">
                <h2 class="font-daciaBold font-bold text-[29px] text-yellow text-center">
                    REQUEST API ACCESS
                </h2>                     
                <p class="text-white font-inter font-normal text-base p-5 text-center">Fill out the form to gain seamless access to our apiâ€™s and start building</p>
            </div>
            <div class="p-5 rounded-[20px] flex flex-col w-full gap-2.5 relative z-50" style="background-color: rgba(237, 239, 243, 0.05);">
                <!-- Primera fila -->
                <div class="flex flex-row gap-2.5 w-full">
                    <div class="flex flex-col w-[49%]">
                        <input
                            id="company-name"
                            type="text"
                            class="border border-gray-300 rounded-lg px-4 py-2 text-black focus:outline-none focus:ring-2 focus:ring-yellow"
                            placeholder="Company name"
                        />
                    </div>
                    <div class="flex flex-col w-[48%]">
                        <input
                            id="your-name"
                            type="text"
                            class="border border-gray-300 rounded-lg px-4 py-2 text-black focus:outline-none focus:ring-2 focus:ring-yellow"
                            placeholder="Your name"
                        />
                    </div>
                </div>          
                <!-- Segunda fila -->
                <div class="flex flex-row w-full gap-2.5">
                    <div class="flex flex-col w-[49%]">
                        <input
                            id="title"
                            type="text"
                            class="border border-gray-300 rounded-lg px-4 py-2 text-black focus:outline-none focus:ring-2 focus:ring-yellow"
                            placeholder="Title"
                        />
                    </div>
                    <CountrySelect />
                </div>           
                <!-- Tercera fila -->
                <div class="flex flex-col w-full">
                    <input
                        id="sportsbook-url"
                        type="url"
                        class="border border-gray-300 rounded-lg px-4 py-2 text-black focus:outline-none focus:ring-2 focus:ring-yellow"
                        placeholder="Sportsbook URL"
                    />
                </div>    
                <!-- Cuarta fila -->
                <div class="flex flex-col w-full">
                    <textarea
                        id="comments"
                        rows="4"
                        class="border border-gray-300 rounded-lg px-4 py-2 text-black focus:outline-none focus:ring-2 focus:ring-yellow"
                        placeholder="Comments"
                    ></textarea>
                </div>
                <button
                    type="submit"
                    class="bg-yellow text-black font-inter font-semibold text-base rounded-lg px-[10px] py-3">Send Request
                </button>
            </div>        
        </div>      
    </section>
    <Image src={elipse} alt="elipse" class="absolute -z-30 right-0 top-0 w-full"  />
</Layout>